<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main9Activity"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/fondo_filtros">

    <LinearLayout
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:background="#FFFFFF">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Filtros"
            android:textColor="#C74765"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:background="#F1F1F1"
                android:textColor="#9C9C9C"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight="1"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sexo"
                android:background="#F1F1F1"
                android:textColor="#9C9C9C"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight=".99"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abajo"
                android:layout_weight=".01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edad"
                android:background="#F1F1F1"
                android:textColor="#9C9C9C"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight=".99"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abajo"
                android:layout_weight=".01"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp"
            android:weightSum="1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Altura"
                android:background="#F1F1F1"
                android:textColor="#9C9C9C"
                android:textSize="12sp"
                android:padding="5dp"
                android:layout_weight=".99"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/abajo"
                android:layout_weight=".01"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_filtrar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#C74765"
            android:text="Filtrar bÃºsqueda"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</LinearLayout>