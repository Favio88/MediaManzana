<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Main4Activity"
    android:background="#F9F9F9"
    android:id="@+id/rl_principal">

    <FrameLayout
        android:id="@+id/fl_cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF"
        android:paddingBottom="4dp">

        <ImageView
            android:id="@+id/iv_fotoPerfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/foto_perfil"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:layout_gravity="left"/>

        <ImageView
            android:id="@+id/iv_notificacion"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/notificacion" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/logo_small"
                android:layout_marginTop="5dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Media Manzana"
                android:textColor="#C74765"
                android:textSize="10sp"/>

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_playChico"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play"
            android:layout_gravity="right"
            android:layout_marginTop="15dp"
            android:layout_marginRight="80dp"/>

        <ImageView
            android:id="@+id/iv_opciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/opciones"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_gravity="right"/>

    </FrameLayout>

    <LinearLayout
        android:layout_below="@+id/fl_cabecera"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F9F9F9"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_playGrande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_playGrande1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_grande" />

            <ImageView
                android:id="@+id/iv_playGrande2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_grande" />

            <ImageView
                android:id="@+id/iv_playGrande4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_grande" />

            <ImageView
                android:id="@+id/iv_playGrande5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_grande" />

            <ImageView
                android:id="@+id/iv_playGrande6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/play_grande" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal"
            android:weightSum="2">


            <LinearLayout
                android:id="@+id/ll_fotos1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:layout_weight="1"
                android:gravity="right"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_fotos2"
                android:layout_width="0dp"
                android:layout_height="350dp"
                android:layout_marginLeft="5dp"
                android:layout_weight="1"
                android:gravity="left"
                android:orientation="vertical"
                android:weightSum="1">

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

                <ImageView
                    android:layout_width="140dp"
                    android:layout_height="120dp"
                    android:background="@drawable/foto_nombre" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#FFFFFF"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:padding="5dp">

        <ImageView
            android:id="@+id/iv_guardado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_guardado"/>

        <ImageView
            android:id="@+id/iv_gusta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_gusta"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/iv_inicio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_inicio"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/iv_mensajes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_mensajes"
            android:layout_marginLeft="20dp"/>

        <ImageView
            android:id="@+id/iv_perfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/icono_perfil"
            android:layout_marginLeft="20dp"/>

    </LinearLayout>

</RelativeLayout>